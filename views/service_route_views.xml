<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de árbol para Rutas -->
    <record id="view_service_route_tree" model="ir.ui.view">
        <field name="name">service.route.tree</field>
        <field name="model">service.route</field>
        <field name="arch" type="xml">
            <list string="Rutas de Servicio">
                <field name="code"/>
                <field name="name"/>
                <field name="origin_city"/>
                <field name="destination_city"/>
                <field name="distance_km"/>
                <field name="estimated_time" widget="float_time"/>
                <field name="default_price_per_kg"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para Rutas -->
    <record id="view_service_route_form" model="ir.ui.view">
        <field name="name">service.route.form</field>
        <field name="model">service.route</field>
        <field name="arch" type="xml">
            <form string="Ruta de Servicio">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="name" placeholder="Ej: Lima - Arequipa"/>
                            <field name="code"/>
                            <field name="origin_city"/>
                            <field name="destination_city"/>
                        </group>
                        <group>
                            <field name="distance_km"/>
                            <field name="estimated_time" widget="float_time"/>
                            <field name="default_price_per_kg"/>
                        </group>
                    </group>
                    <group>
                        <field name="notes" placeholder="Observaciones adicionales sobre la ruta..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda para Rutas -->
    <record id="view_service_route_search" model="ir.ui.view">
        <field name="name">service.route.search</field>
        <field name="model">service.route</field>
        <field name="arch" type="xml">
            <search string="Buscar Rutas">
                <field name="name"/>
                <field name="code"/>
                <field name="origin_city"/>
                <field name="destination_city"/>
                <separator/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                <group expand="0" string="Agrupar Por">
                    <filter string="Ciudad Origen" name="group_origin" context="{'group_by': 'origin_city'}"/>
                    <filter string="Ciudad Destino" name="group_destination" context="{'group_by': 'destination_city'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Acción para Rutas -->
    <record id="action_service_route" model="ir.actions.act_window">
        <field name="name">Rutas de Servicio</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">service.route</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crear una nueva Ruta de Servicio
            </p>
            <p>
                Define las rutas disponibles para el servicio de distribución.
            </p>
        </field>
    </record>

</odoo>